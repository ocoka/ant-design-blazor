        <TreeNode Title="A" TItem="string">
            <Nodes>
                <TreeNode Title="A1" TItem="string">
                    <Nodes>
                        <TreeNode Title="A1-1" TItem="string"></TreeNode>
                        <TreeNode Title="A1-2" TItem="string"></TreeNode>
                    </Nodes>
