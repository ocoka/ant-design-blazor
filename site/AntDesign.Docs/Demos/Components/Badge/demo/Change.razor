<div>
    <div>
        <Badge Count="@count">
            <a href="#" class="head-example" />
        </Badge>
        <ButtonGroup>
            <Button @onclick="_=>decline()">
                <Icon Type="minus"></Icon>
            </Button>
            <Button @onclick="_=>increase()">
                <Icon Type="plus"></Icon>
            </Button>
        </ButtonGroup>
    </div>
    <div style="margin-top: 10px">
        <Badge Dot="@show">
            <a href="#" class="head-example" />
        </Badge>
        <Switch OnChange="onChange" Checked="@show" />
    </div>
</div>

@code {
    int count = 5;
    bool show = true;

    void increase()
    {
        count++;
    }

    void decline()
    {
        count--;
        if (count < 0)
        {
            count = 0;
        }
    }

    void onChange(bool show)
    {
        this.show = show;
    }
}
