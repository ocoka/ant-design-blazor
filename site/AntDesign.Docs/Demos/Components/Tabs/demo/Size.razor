<div>
    <RadioGroup @bind-Value="size" Style="margin-bottom: 16px;">
        <Radio RadioButton Value="@TabSize.Small">Small</Radio>
        <Radio RadioButton Value="@TabSize.Default">Default</Radio>
        <Radio RadioButton Value="@TabSize.Large">Large</Radio>
    </RadioGroup>

    <Tabs DefaultActiveKey="1" Size="@size" Style="margin-bottom: 32px">
        <TabPane Key="1">
            <Tab>Tab 1</Tab>
            <ChildContent>Content of Tab Pane 1</ChildContent>
        </TabPane>
        <TabPane Key="2">
            <Tab>Tab 2</Tab>
            <ChildContent>Content of Tab Pane 2</ChildContent>
        </TabPane>
        <TabPane Key="3">
            <Tab>Tab 3</Tab>
            <ChildContent>Content of Tab Pane 3</ChildContent>
        </TabPane>
    </Tabs>

    <Tabs DefaultActiveKey="1" Type="@TabType.Card" Size="@size">
        <TabPane Key="1">
            <Tab>Tab 1</Tab>
            <ChildContent>Content of Tab Pane 1</ChildContent>
        </TabPane>
        <TabPane Key="2">
            <Tab>Tab 2</Tab>
            <ChildContent>Content of Tab Pane 2</ChildContent>
        </TabPane>
        <TabPane Key="3">
            <Tab>Tab 3</Tab>
            <ChildContent>Content of Tab Pane 3</ChildContent>
        </TabPane>
    </Tabs>
</div>

@code{
    private string size = TabSize.Default;
}